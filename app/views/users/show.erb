<h2>User: <%=@user.username%></h2>

<h3>Recipes:</h3>
  <%@user.recipes.each do |recipe|%>
  <h4><a href="/recipes/<%= recipe.slug %>"><%= recipe.name%></a></h4>
<% end %>

<h3>Categories:</h3>
<% @user.categories.each do |category| %>
<h4><a href="/categories/<%= category.slug %>"><%= category.name%></a></h4>
<% end %>
